---
import "../styles/global.css";
import SparklesCore from "../components/SparklesCore.tsx";
import SEO, { type SEOProps } from "../components/SEO.astro";

interface Props {
  title: string;
  seo?: Partial<SEOProps>;
}

const { title, seo = {} } = Astro.props;

// Default SEO values
const defaultSEO: SEOProps = {
  title,
  description: "Roberto Murillo - Inland Northwest-based Full Stack Software Engineer with a deep interest in AI tooling, machine learning and human-computer interaction.",
  canonical: "https://rcmcodes.com/",
  ...seo
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Use our comprehensive SEO component -->
    <SEO {...defaultSEO} />
    
    <!-- Font Loading Optimizations -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
      />
    </noscript>
  </head>

  <body
    class="bg-black leading-relaxed text-neutral-200 tracking-wide antialiased selection:bg-neutral-300 selection:text-neutral-900 z-10 relative"
  >
    <SparklesCore
      client:visible
      id="tsparticlesfullpage"
      background="transparent"
      minSize={0.6}
      maxSize={1.4}
      opacity={0.2}
      particleDensity={30}
      className="w-full h-full fixed z-0"
      particleColor="#FFFFFF"
    />
    <slot />
    <!-- <script src="../scripts/main.ts"></script> -->
  </body>

  <style is:global>
*{
  font-family:
      "montserrat",
      -apple-system,
      system-ui,
      sans-serif;
}

    html {
      
      background-size: 224px;
      font-size: 1.125rem;
    }
  </style>
</html>
