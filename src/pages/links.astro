---
import Layout from "../layouts/Layout.astro";
import IconCal from "../../public/logos/caldotcom.svg";
import IconLinkedin from "../components/icons/linkedin2.astro";
import CoffeeChatButton from "../components/CoffeeChatButton";

import { Image } from "astro:assets";

// Import images
import profileImage from "../../public/profile.webp";
import rmLogo from "../../public/logos/rcmcodes_white.svg";
import websiteLogo from "../../public/logos/website.svg";
---

<Layout 
  title="Links - Connect with Roberto Murillo | RCM CODES"
  seo={{
    description: "Connect with Roberto Murillo, Full Stack Software Engineer. Find all my professional links, portfolio, LinkedIn, and ways to work with me for your next project.",
    canonical: "https://rcmcodes.com/links",
    openGraph: {
      title: "Connect with Roberto Murillo - Full Stack Software Engineer",
      description: "Find all my professional links and ways to connect. Portfolio, LinkedIn, and partnership opportunities available.",
      type: "profile" 
    },
    structuredData: {
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "name": "Roberto Murillo",
        "alternateName": "rcmcodes",
        "jobTitle": "Full Stack Software Engineer",
        "url": "https://rcmcodes.com",
        "image": "https://rcmcodes.com/profile.webp",
        "sameAs": [
          "https://www.linkedin.com/in/roberto-c-murillo/",
          "https://rcmcodes.com"
        ]
      }
    }
  }}
>
    <!-- Add higher z-index to ensure links are above particles -->
    <div class="min-h-screen flex items-center justify-center p-4 relative z-20">
        <div class="w-full max-w-md mx-auto text-center">
            
            <!-- Profile Section -->
            <div class="mb-8">
                <div class="w-24 h-24 mx-auto mb-4 rounded-full overflow-hidden bg-neutral-800 ring-2 ring-neutral-700">
                    <Image 
                        src={profileImage}
                        alt="Roberto Murillo" 
                        class="w-full h-full object-cover grayscale"
                        width={192}
                        height={192}
                        loading="eager"
                        decoding="async"
                        fetchpriority="high"
                    />
                </div>
                
                <h1 class="text-2xl font-bold text-white mb-2">
                    rcmcodes
                </h1>
                
                <p class="text-neutral-400 text-sm mb-2">
                    Full Stack Software Engineer
                </p>

                <p class="text-green-400 text-xs font-medium flex items-center justify-center gap-2">
                    <span
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                >
                </span>
                <span>Open to new opportunities</span>
                
                
                </p>
            </div>

            <!-- Value Proposition -->
            <div class="mb-6 p-4 bg-neutral-800/50 rounded-xl border border-neutral-700">
                <p class="text-neutral-300 text-sm leading-relaxed">
                    Hello üëãüèº <br> I'm an inland northwest-based <span class="text-blue-400 font-medium">full stack software engineer</span> with a deep interest in <span class="text-purple-400 font-medium">machine learning</span> and <span class="text-green-400 font-medium">human-computer interaction</span>. 
                    
                </p>
            </div>

            <!-- Links -->
            <div class="space-y-4 mb-8">
                
                <!-- Portfolio -->
                <a 
                    href="https://rcmcodes.com" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center w-full p-4 bg-neutral-800 hover:bg-neutral-700 rounded-xl transition-colors duration-200 relative z-30"
                >
                    <div class="w-6 h-6 mr-4 flex-shrink-0">
                        <Image 
                            src={rmLogo}
                            alt="RM Logo"
                            class="w-full h-full object-contain"
                            
                        />
                    </div>
                    <span class="text-white font-medium">Developer Portfolio</span>
                </a>

                <!-- Freelancer Services -->
                <a 
                    href="/partner" 
                    class="flex items-center w-full p-4 shiny-bg hover:opacity-90 rounded-xl transition-all duration-200 relative z-30"
                >
                    <div class="w-6 h-6 mr-4 flex-shrink-0">
                        <Image 
                            src={websiteLogo}
                            alt="Website Logo"
                            class="w-full h-full object-contain"
                            width={20}
                            height={20}
                        />
                    </div>
                    <span class="text-white font-medium">Work with me</span>
                </a>

                <!-- Coffee Chat -->
                <div class="relative z-30">
                    <CoffeeChatButton client:load />
                </div>

                <!-- LinkedIn -->
                <a 
                    href="https://www.linkedin.com/in/roberto-c-murillo/" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="flex items-center w-full p-4 bg-[#0B66C2] hover:bg-[#0B66C2]/80 rounded-xl transition-colors duration-200 relative z-30"
                >
                    <div class="w-6 h-6 mr-4 flex-shrink-0 text-white">
                        <IconLinkedin />
                    </div>
                    <span class="text-white font-medium">Connect on LinkedIn</span>
                </a>

                

            </div>

            <!-- Footer Logo/Branding -->
            <div class="flex justify-center">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center">
                    <span class="text-white text-sm font-bold">RM</span>
                </div>
            </div>
            
        </div>
    </div>
</Layout>

<style>
  .shiny-bg {
    background: linear-gradient(135deg, #a476ff 25%, #eee5ff 50%, #a476ff 75%);
    background-size: 400% 100%;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }
</style>