import LogoWall from "../components/logoWall.astro";
import ArrowDivider from "../components/ArrowDivider.astro";
import { Image } from "astro:assets";
import CalButton from "../components/CalButton";
---

<Layout 
  title="Roberto M. - Full Stack Software Engineer | RCM CODES"
  seo={{
    description: "Roberto M. is a Full Stack Software Engineer specializing in React, TypeScript, Node.js, and machine learning. Building innovative web applications and custom software solutions in the Inland Northwest.",
    canonical: "https://rcmcodes.com/",
    openGraph: {
      title: "Roberto M. - Full Stack Software Engineer",
      description: "Full Stack Software Engineer with a deep interest in AI tooling, machine learning, and human-computer interaction. Build with React, TypeScript, and modern web technologies.",
      type: "profile"
    },
    structuredData: {
      "@context": "https://schema.org",
      "@type": ["Person", "ProfessionalService"],
      "name": "Roberto M.",
      "alternateName": "rcmcodes",
      "description": "Full Stack Software Engineer with a deep interest in AI tooling, machine learning, and human-computer interaction. Build with React, TypeScript, and modern web technologies.",
      "url": "https://rcmcodes.com",
      "image": "https://rcmcodes.com/profile.webp",
      "sameAs": [
        "https://www.linkedin.com/in/roberto-c-murillo/",
        "https://github.com/rcmcodes"
      ],
      "jobTitle": "Full Stack Software Engineer",
      "worksFor": {
        "@type": "Organization",
        "name": "100Devs"
      },
      "knowsAbout": [
        "JavaScript",
        "TypeScript", 
        "React",
        "Node.js",
        "Python",
        "Machine Learning",
        "Web Development",
        "Full Stack Development",
        "AI Tooling",
        "Human-Computer Interaction"
      ],
      "hasOccupation": {
        "@type": "Occupation",
        "name": "Full Stack Software Engineer",
        "occupationLocation": {
          "@type": "Place",
          "name": "Inland Northwest"
        },
        "skills": [
          "React Development",
          "TypeScript Programming", 
          "Node.js Backend Development",
          "Machine Learning Implementation",
          "Full Stack Web Development"
        ]
      },
      "email": "rcmcodes@gmail.com",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "Inland Northwest"
      }
    }
  }}
>
  <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-4">
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
        >
          <div class="flex flex-col items-center text-center gap-6">
            <!-- Profile Image -->
              <Image
              src="/profile.webp"
              alt="Roberto M. - Full Stack Software Engineer"
              class="w-40 h-40 object-cover rounded-full"
              width={160}
              height={160}
              loading="eager"
              decoding="async"
              fetchpriority="high"
            />
            
            <!-- Name and Titles -->
            <div class="flex flex-col items-center gap-2">
              <p class="text-sm lg:text-lg font-medium text-neutral-200/60 py-1 px-3 rounded-full bg-neutral-400/10">Hi, I'm Roberto M.</p>
              <a
                href="/"
                class="text-3xl lg:text-4xl block font-medium tracking-tight"
              >
                <h2>Full Stack Software Engineer</h2>
              </a>
            </div>

            <!-- Call to Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 items-center">
              <a
                data-ccursor
                href="mailto:rcmcodes@gmail.com?subject=Hey ðŸ‘‹ I'm interested in hiring you, let's talk!"
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2"
              >
                <span>Hire me</span>
                <span
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                >
                </span>
              </a>

              <CalButton client:load />
            </div>
            
            <!-- Logo Wall -->
            <div class="mt-4 w-full max-w-sm">
              <LogoWall />
            </div>

            <!-- Social Icons -->
            {
              SOCIALS.length && (
                <ul
                  class="mt-4 flex items-center justify-center gap-x-5"
                  aria-label="Social media"
                >
                  {SOCIALS.map((social) => (
                    <li class="text-xs p-2 rounded" data-ccursor>
                      <a
                        class="block hover:text-slate-200"
                        href={social.url}
                        target="_blank"
                        rel="noreferrer noopener"
                        aria-label={`${social.name} (opens in a new tab)`}
                      >
                        <span class="sr-only">{social.name}</span>
                        {<Component component={social.icon} />}
                      </a>
                    </li>
