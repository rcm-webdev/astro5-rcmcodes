---
import Component from "../components/Component.astro";
import Experience from "../components/experience/index.astro";
import Lecture from "../components/lecture/index.astro";
import Project from "../components/projects/index.astro";
import { EXPERIENCE } from "../data/experience";
import { SOCIALS } from "../data/socials";
import { LECTURE } from "../data/lecture";
import { PROJECTS } from "../data/projects";
import Layout from "../layouts/Layout.astro";
import LogoWall from "../components/logoWall.astro";
import ArrowDivider from "../components/ArrowDivider.astro";
import { Image } from "astro:assets";
---

<Layout title="RCM CODES">
  <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-24 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-4">
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24"
        >
          <div class="flex flex-col items-center text-center gap-6">
            <!-- Profile Image -->
              <Image
              src="/profile.webp"
              alt="Roberto Murillo"
              class="w-40 h-40 object-cover rounded-full"
              width={160}
              height={160}
              loading="lazy"
            />
            
            <!-- Name and Titles -->
            <div class="flex flex-col items-center gap-2">
              <p class="text-sm lg:text-lg font-medium text-neutral-200/60 py-1 px-3 rounded-full bg-neutral-400/10">Hi, I'm Roberto Murillo</p>
              <a
                href="/"
                class="text-3xl lg:text-4xl block font-medium tracking-tight"
              >
                <h2>Full Stack Software Engineer</h2>
              </a>
            </div>

            <!-- Call to Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 items-center">
              <a
                data-ccursor
                href="mailto:rcmcodes@gmail.com "
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2"
              >
                <span>Email Me</span>
                <span
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                >
                </span>
              </a>

              <a
                data-ccursor
                href="https://cal.com/rcmcodes"
                target="_blank"
                class="inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2"
              >
                <span>Schedule a Call</span>
                <span
                  class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                >
                </span>
              </a>
            </div>
            
            <!-- Logo Wall -->
            <div class="mt-4 w-full max-w-sm">
              <LogoWall />
            </div>

            <!-- Social Icons -->
            {
              SOCIALS.length && (
                <ul
                  class="mt-4 flex items-center justify-center gap-x-5"
                  aria-label="Social media"
                >
                  {SOCIALS.map((social) => (
                    <li class="text-xs p-2 rounded" data-ccursor>
                      <a
                        class="block hover:text-slate-200"
                        href={social.url}
                        target="_blank"
                        rel="noreferrer noopener"
                        aria-label={`${social.name} (opens in a new tab)`}
                      >
                        <span class="sr-only">{social.name}</span>
                        {<Component component={social.icon} />}
                      </a>
                    </li>
                  ))}
                </ul>
              )
            }
          </div>
        </header>

        <main id="content" class="pt-24 lg:w-1/2 lg:py-24">
          <!-- Introduction Section -->
          <section
            id="introduction"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-4 lg:scroll-mt-24 "
            aria-label="Introduction"
          >
          <div
              class="section-header sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                Introduction
              </h2>
            </div>
            <div>
              <div>
                <p class="text-lg font-medium">
                  I'm a full stack <span class="shiny-sec">software engineer</span> and <span class="shiny-sec">machine learning researcher</span> transforming ideas into interactive and seamless digital experiences with cutting-edge technologies.
                </p>
              </div>
          </section>

          <!-- Section Divider -->
          <ArrowDivider />

          <!-- About Me Section -->
          <section
            id="about"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-4 lg:scroll-mt-18"
            aria-label="About me"
          >
            <div
              class="section-header sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                About
              </h2>
            </div>
            <div>
              <div class="mb-4 space-y-4">
                
                <p>
                  After earning my B.S. in Biochemistry, I spent over 2.5 years serving my community as an ophthalmic technician at a local eye clinic. During my time there, I taught myself full-stack web development and built tools that improved technicians' workflows. That experience sparked a more profound passion for building solutions that make life easier. Of recent, I started to build a learning management system to streamline technician onboarding by reducing classroom time and increasing hands-on training.
                  
                  <!-- Today, I work with 100Devs, a development agency where I collaborate
                  with developers globally. Thus far, I have shipped multiple full-stack
                  applications independently and in cross-functional teams. As well
                  as successfully delivered production-ready web applications for
                  several paid clients, aligning closely with their business goals
                  and user needs.<br /> -->
                </p>
                <p>
                  I am always open to new opportunities and look forward to
                  joining a team that values innovation and collaboration. 
                </p>
              </div>
            </div>
          </section>

          <!-- Section Divider -->
          <ArrowDivider />

          <!-- Experience -->
          <section
            id="experience"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-4 lg:scroll-mt-24"
            aria-label="Work experience"
          >
            <div
              class="section-header sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                Experience
              </h2>
            </div><div>
              <ol class="group/list space-y-12">
                {EXPERIENCE.map((experience) => <Experience {...experience} />)}
              </ol>
            </div>
          </section>

          <!-- Section Divider -->
          <ArrowDivider />

          <!-- Speaking Engagements -->
          <section
            id="lecture"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-4 lg:scroll-mt-24"
            aria-label="Lectures"
          >
            <div
              class="section-header sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                Speaking Engagements
              </h2>
            </div>
            <div>
              <ol class="group/list space-y-12">
                {LECTURE.map((lecture) => <Lecture {...lecture} />)}
              </ol>
            </div>
          </section>

          <!-- Section Divider -->
          <ArrowDivider />

          <!-- Featured Projects -->
          <section
            id="applications"
            class="mb-16 scroll-mt-16 md:mb-24 lg:mb-36 lg:scroll-mt-24"
            aria-label="Web Applications"
          >
            <div
              class="section-header sticky top-0 z-20 -mx-6 mb-4 w-screen px-6 py-3 backdrop-blur-lg md:-mx-12 md:px-12 lg:sr-only lg:relative lg:top-auto lg:mx-auto lg:w-full lg:px-0 lg:py-0 lg:opacity-0"
            >
              <h2
                class="text-sm font-bold uppercase tracking-widest text-neutral-200 lg:sr-only"
              >
                Featured Projects
              </h2>
            </div>
            <div>
              <ol class="group/list space-y-12">
                {PROJECTS.map((project) => <Project {...project} />)}
              </ol>
            </div>
            <!-- Resume -->
            <!-- <div class="mt-12">
              <a
                data-ccursor
                class="inline-flex items-center leading-tight text-neutral-200 font-semibold group p-2 rounded px-3"
                aria-label="View Full Résumé"
                target="_blank"
                rel="noreferrer noopener"
                href="./resume.pdf"
              >
                <span>
                  <span
                    class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                  >
                    View Full
                  </span>
                  <span class="whitespace-nowrap">
                    <span
                      class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                    >
                      Résumé
                    </span>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      class="ml-1 inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none"
                      aria-hidden="true"
                      ><path
                        fill-rule="evenodd"
                        d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                        clip-rule="evenodd"></path></svg
                    ></span
                  ></span
                ></a
              >
            </div> -->
          </section>
          <footer class="max-w-md pb-16 text-sm text-neutral-500 sm:pb-0">
            <p>
              Designed in
              <a
                href="https://www.figma.com/"
                class="font-medium text-neutral-400 hover:text-red-300 focus-visible:text-red-300 hover:underline"
                target="_blank"
                rel="noreferrer">Figma</a
              >
              and coded in
              <a
                href="https://code.visualstudio.com/"
                class="font-medium text-neutral-400 hover:text-red-300 focus-visible:text-red-300 hover:underline"
                target="_blank"
                rel="noreferrer">Visual Studio Code</a
              >
            </p>
          </footer>
        </main>
      </div>
    </div>
  </div>

  <footer class="text-center py-4 text-xs">
    {new Date().getFullYear()}. All rights reserved.
  </footer>
</Layout>

<style scoped>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .hero {
    background-image: url(/pattern.svg);
    background-position: top center;
    background-repeat: no-repeat;
    overflow-y: visible;
    overflow-x: clip;
  }

  .shiny-sec {
    background: linear-gradient(135deg, #a476ff 25%, #eee5ff 50%, #a476ff 75%);
    background-size: 400% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    animation: shine 3s linear infinite;
  }

  @keyframes shine {
    0% {
      background-position: 100% 50%;
    }
    30%,
    70% {
      background-position: 0% 50%;
    }
  }

  /* Fix for mobile sticky headers stacking issue */
  @media (max-width: 1023px) {
    .section-header {
      position: sticky;
      top: 0;
      z-index: 10;
      background: rgba(23, 23, 23, 0.8);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }
    
    /* Ensure each section header has a unique z-index to prevent stacking */
    #introduction .section-header {
      z-index: 15;
    }
    
    #about .section-header {
      z-index: 14;
    }
    
    #experience .section-header {
      z-index: 13;
    }
    
    #lecture .section-header {
      z-index: 12;
    }
    
    #applications .section-header {
      z-index: 11;
    }
  }

  /*
  .hero {
    animation: fadeIn 3s;
  }
   */
</style>
